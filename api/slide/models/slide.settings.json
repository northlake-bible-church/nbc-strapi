{
  "connection": "default",
  "collectionName": "slides",
  "info": {
    "name": "slide"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "SlideName": {
      "type": "string"
    },
    "SlideImage": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "AlternativeText": {
      "type": "string"
    },
    "Caption": {
      "type": "string"
    },
    "SlideUrl": {
      "type": "string"
    },
    "PublishDate": {
      "type": "date"
    },
    "ExpiredDate": {
      "type": "date"
    },
    "OverlayOnDesktop": {
      "type": "enumeration",
      "enum": [
        "None",
        "Light",
        "Heavy"
      ],
      "default": "None"
    },
    "OverlayOnMobile": {
      "type": "enumeration",
      "enum": [
        "None",
        "Light",
        "Heavy"
      ],
      "default": "None"
    },
    "OverlayOnTablet": {
      "type": "enumeration",
      "enum": [
        "None",
        "Light",
        "Heavy"
      ],
      "default": "None"
    }
  }
}
